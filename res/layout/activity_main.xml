<ScrollView
    android:id="@+id/widget54"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bc1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
        
    <Button
        android:id="@+id/hadis"
        style="@style/btnStyleSandrift"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="51dp"
        android:layout_toRightOf="@+id/ayet"
        android:text="GÜNÜN HADİS-İ ŞERİFİ" />

    <Button
        android:id="@+id/ayet"
        style="@style/btnStyleSandrift"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/hadis"
        android:layout_alignBottom="@+id/hadis"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="47dp"
        android:text="GÜNÜN AYET-İ KERİMESİ" />

    <Button
        android:id="@+id/sunnet"
        style="@style/btnStyleSandrift"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ayet"
        android:layout_marginTop="31dp"
        android:layout_toLeftOf="@+id/hadis"
        android:text="GÜNÜN SÜNNETİ" />

    <Button
        android:id="@+id/soz"
        style="@style/btnStyleSandrift"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sunnet"
        android:layout_alignBottom="@+id/sunnet"
        android:layout_alignLeft="@+id/hadis"
        android:text="GÜNÜN SÖZÜ" />

    <Button
        android:id="@+id/isim"
        style="@style/btnStyleSandrift"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sunnet"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@+id/hadis"
        android:text="GÜNÜN İSİMLERİ" />

    <Button
        android:id="@+id/dua"
        style="@style/btnStyleSandrift"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/isim"
        android:layout_alignBottom="@+id/isim"
        android:layout_alignLeft="@+id/soz"
        android:text="GÜNÜN DUASI" />

    
</RelativeLayout>
</ScrollView>